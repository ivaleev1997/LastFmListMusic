<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        tools:context=".ui.BottomSheetFragment"
        app:behavior_peekHeight="230dp"
        android:id="@+id/layout">
    <data>
        <variable name="track"
                  type="com.lastfmlistmusic.data.remote.model.LastFmTrack"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_error_outline_black_24dp"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:glideImageLoad="@{track.images}"/>
        <TextView
                android:text="Artist:"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="44dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                android:layout_marginTop="40dp"/>
        <TextView
                android:text="@{track.artist.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/artist"
                app:layout_constraintTop_toTopOf="@+id/textView" app:layout_constraintStart_toEndOf="@+id/textView"
                android:layout_marginStart="60dp"/>
        <TextView
                android:text="Track name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/textView"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
        <TextView
                android:text="@{track.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trackName"
                app:layout_constraintStart_toStartOf="@+id/artist"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/artist"/>
        <TextView
                android:text="Listeners:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" app:layout_constraintStart_toStartOf="@+id/textView5"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"/>
        <TextView
                android:text="@{track.listeners}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listeners"
                app:layout_constraintStart_toStartOf="@+id/trackName"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/trackName"/>
        <TextView
                android:text="Play counts:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/textView7"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView7"/>
        <TextView
                android:text="@{track.playCount}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playCounts"
                app:layout_constraintStart_toStartOf="@+id/listeners"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/listeners"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
